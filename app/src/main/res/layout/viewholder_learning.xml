<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_containerl"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="20dp"
    android:layout_gravity="center"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="10dp"
    style="@style/custom_card_view_style">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imgPicl"
            style="@style/iconColorGeneral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="4dp"
            android:src="@drawable/baseline_close_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/txtOwnerl"
            app:layout_constraintTop_toTopOf="parent">

        </ImageView>

        <TextView
            android:id="@+id/txtTitlel"
            style="@style/textColorBlack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="11dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:padding="2dp"
            android:text="Khoá học giao tiếp ở nơi công sở "
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/imgPicl"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/txtProgress"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtOwnerl"
            style="@style/textColorSmall"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="1dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="GV: Nguyễn Trung Vũ"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.941"
            app:layout_constraintStart_toEndOf="@+id/textView10" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="15dp"
            android:layout_height="18dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/available"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txtProgress"
            style="@style/textColorSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:layout_marginTop="12dp"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:text="10%"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/progressCompleteLearning"
            app:layout_constraintStart_toStartOf="@+id/progressCompleteLearning"
            app:layout_constraintTop_toBottomOf="@+id/txtTitlel">

        </TextView>

        <ProgressBar
            android:id="@+id/progressCompleteLearning"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:max="100"
            android:padding="10dp"
            android:progress="10"
            android:progressDrawable="@drawable/progress_bar_rounded"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtProgress"></ProgressBar>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginBottom="10dp"
            android:text="Đang học"
            android:textColor="#44bc54"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView9"
            app:layout_constraintTop_toTopOf="@+id/imageView9"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>