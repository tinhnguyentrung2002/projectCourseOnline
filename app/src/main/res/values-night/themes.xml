    <style name="button">
        <item name="background">@drawable/btn_login_night</item>
    </style>
    <style name="custom_card_view" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">48dp</item>
        <item name="cornerSizeTopLeft">48dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="appBarTextColor">
        <item name="titleTextColor">@color/white</item>
    </style>
    <style name="roundedImageView" parent="">
        <item name="cornerSize">12%</item>
        <item name="color">@color/white</item>
    </style>
    <style name="BottomSheetDialogAnimation">
        <item name="android:windowEnterTransition">@anim/slide_in_bottom</item>
        <item name="android:windowExitTransition">@anim/slide_out_bottom</item>
    </style>
    <style name="backGroundState" parent="">
        <item name="android:background">@drawable/bg_state_night</item>
    </style>
    <style name="backGroundComment" parent="">
        <item name="android:background">@drawable/comment_bg_night</item>
    </style>
    <style name="boxBackgroundColor">
        <item name="boxBackgroundColor">@color/dark_grey</item>
    </style>
</resources>